{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/jest-extended/types/**/*.d.ts"
  ],
  "typedocOptions": {
    "name": "Date & Time Calculator",
    "entryPoints": ["src"],
    "entryPointStrategy": "expand",
    "out": "docs"
  }
}
